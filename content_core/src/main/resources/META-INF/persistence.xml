<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Development">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>edu.northwestern.art.content_core.content.Taxonomy</class>
        <class>edu.northwestern.art.content_core.content.Category</class>
        <class>edu.northwestern.art.content_core.content.Item</class>
        <class>edu.northwestern.art.content_core.images.ImageItem</class>
        <class>edu.northwestern.art.content_core.images.ImageSource</class>
        <class>edu.northwestern.art.content_core.images.ImageURL</class>
        <class>edu.northwestern.art.content_core.images.TiledImageURL</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:data/h2/development" />

            <!-- The service works with an embedded db and no user / password.-->
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
    </persistence-unit>

    <persistence-unit name="Testing">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>edu.northwestern.art.content_core.content.Taxonomy</class>
        <class>edu.northwestern.art.content_core.content.Category</class>
        <class>edu.northwestern.art.content_core.content.Item</class>
        <class>edu.northwestern.art.content_core.images.ImageItem</class>
        <class>edu.northwestern.art.content_core.images.ImageSource</class>
        <class>edu.northwestern.art.content_core.images.ImageURL</class>
        <class>edu.northwestern.art.content_core.images.TiledImageURL</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:data/h2/test" />

            <!-- The service works with an embedded db and no user / password.-->
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
    </persistence-unit>

</persistence>